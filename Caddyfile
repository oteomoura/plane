{
  auto_https off
}

:80 {
  encode zstd gzip

  # Frontend
  handle_path / {
    reverse_proxy web:3000
  }

  # API
  handle_path /api/* {
    reverse_proxy api:8000
  }

  # MinIO (optional: if your Plane setup needs direct object access)
  handle_path /minio/* {
    reverse_proxy minio:9000
  }
}